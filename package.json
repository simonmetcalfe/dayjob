{
  "name": "dayjob",
  "version": "1.2.1",
  "description": "Make great Spotify playlists while you work.",
  "author": "Simon Metcalfe",
  "keywords": [
    "Spotify",
    "playlist",
    "playlists",
    "dj",
    "music",
    "discovery",
    "keyboard",
    "shortcut",
    "shortcuts",
    "automation",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simonmetcalfe/dayjob.git"
  },
  "license": "MIT",
  "main": "src/main.mjs",
  "dependencies": {
    "bootstrap": "5.3.3",
    "electron-log": "5.3.2",
    "electron-squirrel-startup": "1.0.1",
    "electron-store": "10.0.1",
    "font-awesome": "4.7.0",
    "menubar": "9.5.1",
    "spotify-web-api-node": "5.0.2",
    "v8-compile-cache": "2.4.0"
  },
  "devDependencies": {
    "electron": "32.3.3",
    "electron-installer-dmg": "5.0.1",
    "electron-installer-windows": "3.0.0",
    "electron-packager": "17.1.2"
  },
  "scripts": {
    "start": "electron .",
    "build-mac-silicon": "electron-packager . --platform=darwin --arch=arm64 --overwrite --out=builds/_build-temp --ignore=/builds --ignore=/assets_readme",
    "build-mac-intel": "electron-packager . --platform=darwin --arch=x64   --overwrite --out=builds/_build-temp --ignore=/builds --ignore=/assets_readme",
    "build-win": "electron-packager . --platform=win32  --arch=x64   --overwrite --out=builds/_build-temp --ignore=/builds --ignore=/assets_readme",
    "package-mac-silicon": "electron-installer-dmg --overwrite ./builds/_build-temp/dayjob-darwin-arm64/dayjob.app ./builds/dayjob-mac-silicon",
    "package-mac-intel": "electron-installer-dmg --overwrite ./builds/_build-temp/dayjob-darwin-x64/dayjob.app ./builds/dayjob-mac-intel",
    "package-win": "electron-installer-windows --src ./builds/_build-temp/dayjob-win32-x64/ --dest ./builds/dayjob-win-x64"
  }
}
